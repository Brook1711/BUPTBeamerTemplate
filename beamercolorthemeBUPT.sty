% Dictates which colours are used
\ProvidesPackage{beamercolorthemeBUPT}

\mode<presentation>
% Define Colours
\definecolor{BUPTblue}{RGB}{1,58,137}
\definecolor{glassgrey}{rgb}{220,220,220}

% Set Colours
\setbeamercolor{title}{parent=BUPTblue}
\setbeamercolor{title}{fg=BUPTblue}
\setbeamercolor{subtitle}{parent=BUPTblue}
\setbeamercolor{author}{parent=glassgrey}
\setbeamercolor{date}{parent=BUPTblue}
\setbeamercolor{institute}{parent=BUPTblue}

\setbeamercolor{section title}{parent=BUPTblue}
\setbeamercolor{subsection title}{parent=BUPTblue}
\setbeamercolor{frametitle}{parent=BUPTblue}
\setbeamercolor{background canvas}{parent=BUPTblue}
\setbeamercolor{structure}{fg=BUPTblue}

\setbeamercolor{normal text}{fg=black!97}

\setbeamercolor{footnote}{fg=black!97}
\setbeamercolor{page number in head/foot}{fg=BUPTblue}

\mode
<all>